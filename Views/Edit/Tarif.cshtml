@model Tarif

@{
    ViewData["Title"] = "Tarif";
}

<div class="container-fluid vh-100">
    <div class="row h-100">

        <div class="col-12 bg-light p-5 rounded shadow-lg">
            <div class="row">
                <div class="col-12 bg-white text-dark text-center p-4 rounded border shadow-lg">
                    <h2>Tarif</h2>

                    <form asp-action="Tarif_Edit" asp-controller="Edit" enctype="multipart/form-data" class="container mt-4">

                        <div class="row mb-3 align-items-center">
                            <label for="hotelSelect" class="col-12 col-md-2 col-form-label">Hotel auswählen</label>
                            <div class="col-12 col-md-6">
                                <select id="hotelSelect" name="XHotelId" class="form-select" required>
                                    <option value="" disabled selected>Bitte wählen Sie ein Hotel</option>
                                    @foreach (var hotel in ViewBag.Hotel)
                                    {
                                        <option value="@hotel.Id">@hotel.Name</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3 align-items-center">
                            <label for="Name" class="col-12 col-md-2 col-form-label">Tarifname</label>
                            <div class="col-12 col-md-6">
                                <input name="Name" id="Name" type="text" class="form-control" placeholder="Tarif eingeben" required />
                            </div>
                        </div>

                        <div class="row mb-3 align-items-center">
                            <label for="price" class="col-12 col-md-2 col-form-label">Preis (€)</label>
                            <div class="col-12 col-md-6">
                                <input name="price" id="price" type="number" step="0.01" min="0" class="form-control" placeholder="Preis eingeben" required />
                            </div>
                        </div>

                        <div class="row mt-5">
                            <div class="col-12 col-md-8 offset-md-2">
                                <button type="submit" class="btn btn-success w-100">Absenden</button>
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-12 col-md-8 offset-md-2">
                                <button type="button" class="btn btn-primary w-100" onclick="window.history.back()">Zurück</button>
                            </div>
                        </div>

                    </form>
                    <hr/>
                    <table class="table table-striped table-bordered mt-4">
                        <thead>
                            <tr>
                                <th>Tarifname</th>
                                <th>Preis (€)</th>
                                <th>Eintrag editieren</th>
                                <th>Datei löschen</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var list in ViewBag.Tarif)
                            {
                                <tr>
                                    <form asp-action="Tarif_Save" asp-controller="Edit" method="post" class="container mt-4">
                                        <input type="hidden" name="Id" value="@list.Id"/>
                                        <td><input type="text" name="Name" value="@list.Name" class="form-control" /></td>
                                    <td><input type="text" name="price" value="@list.price" class="form-control" /></td>
                                    <td><input type="submit" value="+" class="form-control" /></td>
                                    <td><a href="@Url.Action("DeleteTarif", "Edit", new { Id = @list.Id })" class="form-control">-</a></td>
                                    </form>
                                  
                                </tr>
                            }
                        </tbody>
                    </table>
                  
                </div>


            </div>
        </div>
    </div>
</div>




